<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Railways.DebugTools" x:Class="Railways.DebugTools.EntriesAdjustionWindow"
        Title="EntriesAdjustionWindow" Height="493.479" Width="725" Loaded="Window_Loaded">
    <Window.Resources>
        <local:RailwayDataDataSet x:Key="railwayDataDataSet"/>
        <CollectionViewSource x:Key="clientViewSource" Source="{Binding Client, Source={StaticResource railwayDataDataSet}}"/>
        <CollectionViewSource x:Key="seatViewSource" Source="{Binding Seat, Source={StaticResource railwayDataDataSet}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource clientViewSource}">
        <DataGrid x:Name="seatDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding Source={StaticResource seatViewSource}}" Margin="10,10,634,253" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="idColumn" Binding="{Binding Id}" Header="Id" IsReadOnly="True" Width="SizeToHeader"/>
                <DataGridCheckBoxColumn x:Name="soldColumn" Binding="{Binding Sold}" Header="Sold" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
